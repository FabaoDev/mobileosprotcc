<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etClientName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Cliente" />

    <EditText
        android:id="@+id/etVehicleModel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Modelo do Veículo" />

    <EditText
        android:id="@+id/etServiceDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data do Serviço (dd/MM/yyyy)" />

    <Button
        android:id="@+id/btnScheduleService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agendar Serviço" />
</LinearLayout>
